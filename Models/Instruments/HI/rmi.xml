<?xml version="1.0"?>
<PropertyList>

    <path>rmi.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>RMI.compass</object-name>
        <property>instrumentation/heading-indicator/indicated-heading-deg</property>
        <object-name>VORneedle</object-name>
        <axis>
            <x>1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>VORneedle</object-name>
        <!-- property>instrumentation/flightdirector/hdg-deg</property -->
        <property>instrumentation/nav[0]/heading-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ADFneedle</object-name>
        <property>instrumentation/adf/indicated-bearing-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>