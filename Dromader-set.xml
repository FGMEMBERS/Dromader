<?xml version="1.0"?>
<PropertyList>

<sim>
	<author>Pavel Cueto, Fernando Espinosa, Horacio Contreras</author>
	<description>PZL M18B Dromader</description>
	<aircraft-version>10-10-2010</aircraft-version>
	<status>early-production</status>
	<flight-model>jsb</flight-model>
	<aero>Dromader</aero>

	<model>
		<path archive="y">Aircraft/Dromader/Models/M18B_Dromader.xml</path>
	</model>

  	<model>
		<path>Aircraft/Dromader/Models/M18B_Dromader.xml</path>
		<livery>
			<file type="string">Default</file>
		</livery>
	</model>

<!-- Configuracion de la vista del piloto -->

	<view>
	<internal archive="y">true</internal>
	<config>
		<x-offset-m archive="y"> 0.00</x-offset-m>  <!-- Lateral -->
		<y-offset-m archive="y"> 1.46</y-offset-m>  <!-- Altura -->
		<z-offset-m archive="y"> 2.23</z-offset-m>  <!-- Profundidad -->
		<default-field-of-view-deg>60</default-field-of-view-deg>
		<pitch-offset-deg>-15</pitch-offset-deg>
	</config>
	</view>

	<startup>
		<splash-texture>Aircraft/Dromader/splash.png</splash-texture>
	</startup>

	<instrumentation>
		<path>Aircraft/Dromader/Models/Instruments/instrumentation.xml</path>
	</instrumentation>

	<sound>
		<path>Aircraft/Dromader/Sounds/Dromader-Sound.xml</path>
	</sound>

